@page "/pesquisa"

<PageTitle>Pesquisar por endereço </PageTitle>

<div class="d-flex flex-column">
    <h1>Pesquisar por endereço: </h1>

    <label for="Cidade">Cidade</label>
    <select class="w-25" name="Cidade" id="pesquisa-cidade"></select>

    <label for="Estado">Estado</label>
    <select class="w-25" name="" id="pesquisa-estado">
        <option value="SP">São Paulo</option>
        <option value="RJ">Rio de Janeiro</option>
        <option value="RO">Roraima</option>
    </select>

    <label for="CodigoIBGE">Código IBGE</label>
    <input class="w-25" id="pesquisa-codigo" type="text" />

    <button class="w-25 mb-3 mt-3" class="btn btn-primary">Pesquisar</button>
</div>

<h2>Resultados:</h2>

<Cidade />